@model MvcMovie.Models.Director

@{ ViewData["Title"] = "Details"; }
<h1>Details</h1>

<div>
    <h4>Director</h4>
    <div class="text-left"><a class="btn btn-small btn-success" asp-action="Edit" asp-route-id="@Model.ID">Edit</a></div>
    <hr />
    <h1>@Html.DisplayFor(model => model.Name) Movie</h1>
    <hr />
</div>

<table class="table">
        <thead>
            <tr>
                <h3>Title:</h3>
            </tr>
        </thead>

    <tbody>
        @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        <h4> @item.Title </h4>
                    </td>
                    <td>
                        <a class="btn btn-small btn-danger" asp-action="DirectorMovie" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

<div>
    <hr />
    <a class="btn btn-small btn-secondary" asp-action="Index">Back to List</a>
</div>
